<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/gradientEnd" android:startColor="@color/gradientStart_pressed" />

            <stroke android:width="1dp" android:color="@color/stroke" />

            <corners android:radius="4dp" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/gradientEnd" android:startColor="@color/gradientStart_unpresed" />

            <stroke android:width="1dp" android:color="@color/stroke_selected" />

            <corners android:radius="4dp" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/gradientEnd" android:startColor="@color/gradientStart_unpresed" />

            <stroke android:width="1dp" android:color="@color/stroke" />

            <corners android:radius="4dp" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape></item>

</selector>